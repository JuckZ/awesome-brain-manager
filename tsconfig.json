{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*.ts", "types.d.ts", "src/utils/db/sqljs.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    // "esModuleInterop": true,
    "baseUrl": "./src/",
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "module": "ESNext",
    // "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "isolatedModules": true,
	"skipLibCheck": true,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "DOM.Iterable"
    ],
    "types": [
      "node",
	  "vite/client",
      "svelte"
    ],
	"paths": {
		"@/*": ["./src/*"],
	}
  }
}
